<aura:component controller="Som_Kam_CmpCtrl">

    <!-- **************
    *
    * Component to edit acc plan and all associated objects
    *
    ****************-->

    <aura:attribute name="accPlanId" type="String" access="public" default="null"/>
    <aura:attribute name="accId" type="String" access="public" />
    <aura:attribute name="data" type="Object" access="private"/>
    <aura:attribute name="dataTmpMain" type="Object" access="private"/>
    <aura:attribute name="dataTmpStratProf" type="Object" access="private"/>
    <aura:attribute name="renderSpinner" type="Boolean" access="private" default="false"/>

    <aura:attribute name="isRead" type="Boolean" access="private" default="true"/>
    <aura:attribute name="showAll" type="Boolean" access="private" default="true"/>
    <aura:attribute name="showButtons" type="Boolean" access="private" default="false"/>
    <aura:attribute name="inviteAll" type="Boolean" access="private" default="false"/>
    <aura:attribute name="isMainView" type="Boolean" access="private" default="true"/>
    <aura:attribute name="showCopy" type="Boolean" access="private" default="false" />

    <aura:attribute name="selectedYear" type="String" access="public" />
    <aura:attribute name="years" type="String" access="public" default="" />
    <aura:attribute name="summaries" type="Integer[]" access="public" default="0,0,0" />

    <!-- event listeners for the strategy profile section -->
    <aura:handler name="okClicked" event="c:Som_KamStrategyProfileSummaryEvent" action="{!c.onStratProfOk}"/>
    <aura:handler name="cancelClicked" event="c:Som_KamStrategyProfileSummaryEvent" action="{!c.onStratProfCancel}"/>

    <!-- method to set accId and accPlanId -->
    <aura:method name="setAccIdAndAccPlanId" action="{!c.onAccIdAndAccPlanIdSet}" access="PUBLIC">
        <aura:attribute name="accId" type="String"/>
        <aura:attribute name="accPlanId" type="String"/>
    </aura:method>


    <c:f42_SpinnerCmp visible="{!v.renderSpinner}"></c:f42_SpinnerCmp>


    <div class="f42">

        <div class="container-fluid">

            <div class="slds">

                <!-- ### NEW SLDS - Kickoff Modal ### -->
                <div aria-hidden="true" tabindex="-1" aria-labelledby="header43" role="dialog" class="slds-modal slds-fade-in-hide" aura:id="kickoffModal">

                    <div class="slds-modal__container">

                        <div class="slds-modal__header modalHeadFoot">
                            <button class="slds-button slds-modal__close slds-button--icon-inverse closeBtn" onclick="{!c.hideKickoffModal}">
                                <i class="ionicons ion-close-round btn-icon"></i>
                            </button>
                            <p class="secondHeader" >Invite E-Mail for Kickoff - {!v.data.accPlan.accPlan.Som_Kickoff__c} - {!v.data.accPlan.accPlan.Som_Account__r.Name}</p>
                            <div class="modHeaderLine" />
                        </div>

                        <div class="slds-modal__content slds-p-around--medium">

                            <div class="form-group slds-grid">
                                <div class="slds-large-size--2-of-12 detailText">
                                    Recipients:
                                </div>
                                <div class="slds-p-horizontal--small slds-large-size--10-of-12 borderInfo stratText pad10" >
                                    <aura:iteration items="{!v.data.accPlan.accPlanDetails}" var="team" indexVar="teamIndex">
                                        {! if( or(team.accPlanDetail.Som_Status__c == 'Created', v.inviteAll ),
                                            team.accPlanDetail.Som_KamTeamMember__r.FirstName + ' ' + team.accPlanDetail.Som_KamTeamMember__r.LastName + ', ', '') }
                                    </aura:iteration>
                                </div>
                            </div>

                            <div class="form-group">
                                <ui:inputText class="fullWidth borderInfo stratText pad10" value="{!v.data.accPlan.accPlan.Som_EmailSubject__c}" />
                            </div>

                            <div class="form-group">
                                <ui:inputTextArea class="fullWidth borderInfo stratText pad10"
                                    resizable="false"
                                    rows="15"
                                    value="{!v.data.accPlan.accPlan.Som_EmailText__c}"/>
                            </div>

                            <p class="detailText">
                                <ui:inputRadio aura:id="r1" value="true" name="inviteKickoff" text="inviteUninvited" change="{!c.onInviteKickoffChange}"/>
                                {!' '+$Label.c.Som_lbl_InviteUninvitedAccPlanTeams}
                            </p>

                            <p class="detailText">
                                <ui:inputRadio aura:id="r0" name="inviteKickoff" text="inviteAll" change="{!c.onInviteKickoffChange}"/>
                                {!' '+$Label.c.Som_lbl_InviteAllAccPlanTeams}
                            </p>

                        </div>

                        <div class="slds-modal__footer modalHeadFoot" >
                            <button type="button" class="whiteBack navButton padButton" onclick="{!c.onInviteKickoff}">
                                {!' '+$Label.c.Som_lbl_InviteFor +' '} {!$Label.c.Som_lbl_Kickoff}
                                <i class="ionicons ion-email btn-icon redColor" style="margin-left: 5px"></i>
                            </button>
                            <button type="button" class="whiteBack navButton padButton" onclick="{!c.hideKickoffModal}" style="margin-right: 0 !important">
                                Cancel
                                <i class="ionicons ion-close-round btn-icon redColor" style="margin-left: 5px"></i>
                            </button>
                        </div>
                    </div>

                </div>

                <!-- ### NEW SLDS - Review Modal ### -->
                <div aria-hidden="true" tabindex="-1" aria-labelledby="header43" role="dialog" class="slds-modal slds-fade-in-hide" aura:id="reviewModal">

                    <div class="slds-modal__container">

                        <div class="slds-modal__header modalHeadFoot">
                            <button class="slds-button slds-modal__close slds-button--icon-inverse closeBtn" onclick="{!c.hideReviewModal}">
                                <i class="ionicons ion-close-round btn-icon"></i>
                            </button>
                            <p class="secondHeader" >Invite E-Mail for Review - {!v.data.accPlan.accPlan.Som_Review__c} - {!v.data.accPlan.accPlan.Som_Account__r.Name}</p>
                            <div class="modHeaderLine" />
                        </div>

                        <div class="slds-modal__content slds-p-around--medium">

                            <div class="form-group slds-grid">
                                <div class="slds-large-size--2-of-12 detailText">
                                    Recipients:
                                </div>
                                <div class="slds-p-horizontal--small slds-large-size--10-of-12 borderInfo stratText pad10" >
                                    <aura:iteration items="{!v.data.accPlan.accPlanDetails}" var="team" indexVar="teamIndex">
                                        {! if( or(team.accPlanDetail.Som_Status__c == 'Kickoff', team.accPlanDetail.Som_Status__c == 'Review'),
                                            team.accPlanDetail.Som_KamTeamMember__r.FirstName + ' ' + team.accPlanDetail.Som_KamTeamMember__r.LastName + ', ', '') }
                                    </aura:iteration>
                                </div>
                            </div>

                            <div class="form-group">
                                <ui:inputText class="fullWidth borderInfo stratText pad10" value="{!v.data.accPlan.accPlan.Som_EmailSubject__c}" />
                            </div>

                            <div class="form-group">
                                <ui:inputTextArea class="fullWidth borderInfo stratText pad10"
                                    resizable="false"
                                    rows="15"
                                    value="{!v.data.accPlan.accPlan.Som_EmailText__c}"/>
                            </div>

                        </div>

                        <div class="slds-modal__footer modalHeadFoot" >
                            <button type="button" class="whiteBack navButton padButton" onclick="{!c.onInviteReview}">
                                {!' '+$Label.c.Som_lbl_InviteFor +' '} {!$Label.c.Som_lbl_Review}
                                <i class="ionicons ion-email btn-icon redColor" style="margin-left: 5px"></i>
                            </button>
                            <button type="button" class="whiteBack navButton padButton" onclick="{!c.hideReviewModal}" style="margin-right: 0 !important">
                                Cancel
                                <i class="ionicons ion-close-round btn-icon redColor" style="margin-left: 5px"></i>
                            </button>
                        </div>

                    </div>

                </div>

                <!-- *** Hides background when modal is open *** -->
                <div class="slds-backdrop slds-backdrop--hide" aura:id="backdrop" />

            </div>

            <!-- ### OLD genrally not needed anymore Delete Modal ###
            <div class="modal fade" aura:id="deleteModal" id="deleteModal" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content" >
                        <div class="modal-body">
                            {!$Label.c.Som_lbl_ReallyDeleteThis+ ' '} {!$Label.c.Som_lbl_AccountPlan}?
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger btn-sm" onclick="{!c.onDelete}" data-dismiss="modal">
                                <i class="ionicons ion-trash-b btn-icon"></i> {!' '+$Label.c.Ven_lbl_Delete}
                            </button>
                        </div>
                    </div>
                </div>
            </div>-->

            <!-- ### OLD Bootstrap - Kickoff Modal ###
            <div class="modal fade" aura:id="kickoffModal" id="kickoffModal" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content" >
                        <div class="modal-body">
                            <div class="form-group">
                                <label>{!$Label.c.Som_lbl_Kickoff}</label>
                                <ui:outputDate class="form-control outputtext"
                                    value="{!v.data.accPlan.accPlan.Som_Kickoff__c}"/>
                            </div>

                            <div class="form-group">
                                <label>{!$Label.c.Som_lbl_EmailText}</label>
                                <ui:inputTextArea class="form-control outputtext"
                                    resizable="false"
                                    rows="10"
                                    value="{!v.data.accPlan.accPlan.Som_EmailText__c}"/>
                            </div>


                            <p>
                                <ui:inputRadio aura:id="r1" value="true" name="inviteKickoff" text="inviteUninvited" change="{!c.onInviteKickoffChange}"/>
                                {!' '+$Label.c.Som_lbl_InviteUninvitedAccPlanTeams}
                            </p>

                            <p>
                                <ui:inputRadio aura:id="r0" name="inviteKickoff" text="inviteAll" change="{!c.onInviteKickoffChange}"/>
                                {!' '+$Label.c.Som_lbl_InviteAllAccPlanTeams}
                            </p>

                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary btn-sm" onclick="{!c.onInviteKickoff}" data-dismiss="modal">
                                <i class="ionicons ion-email btn-icon"></i> {!' '+$Label.c.Som_lbl_InviteFor +' '} {!$Label.c.Som_lbl_Kickoff}
                            </button>
                        </div>
                    </div>
                </div>
            </div>-->

            <!-- ### Review Modal ###
            <div class="modal fade" aura:id="reviewModal" id="reviewModal" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content" >
                        <div class="modal-body">
                            <div class="form-group">
                                <label>{!$Label.c.Som_lbl_Review}</label>
                                <ui:outputDate class="form-control outputtext"
                                    value="{!v.data.accPlan.accPlan.Som_Review__c}"/>
                            </div>

                            <div class="form-group">
                                <label>{!$Label.c.Som_lbl_EmailText}</label>
                                <ui:inputTextArea class="form-control outputtext"
                                    rows="10"
                                    resizable="false"
                                    value="{!v.data.accPlan.accPlan.Som_EmailText__c}"/>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary btn-sm" onclick="{!c.onInviteReview}" data-dismiss="modal">
                                <i class="ionicons ion-email btn-icon"></i> {!' '+$Label.c.Som_lbl_InviteFor +' '} {!$Label.c.Som_lbl_Review}
                            </button>
                        </div>
                    </div>
                </div>
            </div>-->

            <div style="{!not(v.showAll) ? '' : 'display:none'}">
                <div style="margin-top:30px!important" class="alert alert-danger" role="alert">{!$Label.c.Som_lbl_AccPlanRedirectNoAccess}</div>
            </div>


            <!-- ### Main View => without Review Strategy Profiles Section ### -->
            <div style="{!v.isMainView ? '' : 'display:none'}">

                <!-- ### Navbar - New Style ### -->
                <nav class="redBack navbar navbar-default navbar-fixed-top" role="navigation">
                    <div class="navbar-header">
                        <div style="color:white" class="navbar-brand">
                            {!$Label.c.Som_lbl_AccountPlanner}
                        </div>
                    </div>

                    <ul class="nav navbar-nav navbar-left">
                        <li style="margin-left: 0" class="whiteBack">
                            <a href="#" onclick="{!c.onAccount}">
                                <i class="ionicons ion-chevron-left btn-icon"></i>
                                &nbsp;
                                Zur√ºck
                            </a>
                        </li>
                    </ul>

                    <p class="accName" >
                        {!v.data.accPlan.accPlan.Som_Account__r.Name}
                    </p>

                    <ul class="nav navbar-nav navbar-right ulLogo" >
                            <img src="/resource/f42_Icon_Red" height="30" width="30"/>
                    </ul>

                    <ul class="nav navbar-nav navbar-right">

                        <li class="whiteBack navButton">
                            <ui:inputSelect class="navSelect" value="{!v.selectedYear}" options="{!v.years}" change="{!c.onChangeYear}" />
                        </li>

                        <aura:if isTrue="{!v.showCopy}" >
                            <li class="whiteBack navButton">
                                <a href="#" onclick="{!c.onCopyFromLastYear}" style="padding: 3px 10px 3px 10px;">
                                    Copy data from last year {!v.data.accPlan.Id}
                                    <i class="ionicons ion-ios-copy btn-icon redColor" ></i>
                                </a>
                            </li>
                        </aura:if>

                        <aura:if isTrue="{! and(v.isRead, v.accPlanId != null)}" >
                            <li class="whiteBack navButton">
                                <a href="#" onclick="{!c.onSave}" style="padding: 3px 10px 3px 10px;">
                                    Save
                                    <i class="ionicons ion-android-done btn-icon redColor"></i>
                                </a>
                            </li>
                        </aura:if>
                    </ul>

                </nav>

                <!-- ### Navbar - Old Style ###
                <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
                    <div class="navbar-header">
                        <div class="navbar-brand">{!$Label.c.Som_lbl_AccountPlanner}</div>
                    </div>


                    <div class="navbar-collapse collapse navbar-buttons" style="{!v.showButtons ? '' : 'display:none'}">
                        <ul class="nav navbar-nav navbar-left" style="margin-top:8px">
                            <li>
                                <button type="button" class="btn btn-default" onclick="{!c.onAccount}">
                                    <i class="ionicons ion-chevron-left btn-icon"></i> {!' '+$Label.c.Ven_lbl_Account +': ' + v.data.accPlan.accPlan.Som_Account__r.Name}
                                </button>
                            </li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right" style="padding-top:8px">
                            <li>
                                <div class="btn-group" role="group" style="{!v.showButtons ? '' : 'display:none'}">
                                    <button type="button" class="btn btn-default" onclick="{!c.onEdit}" style="{!and(v.isRead, v.accPlanId != null) ? '' : 'display:none'}">
                                        <i class="ionicons ion-edit btn-icon"></i> {!' '+$Label.c.Som_lbl_Edit}
                                    </button>

                                    <button type="button" class="btn btn-default" onclick="{!c.onSave}" style="{!not(v.isRead) ? '' : 'display:none'}">
                                        <i class="ionicons ion-checkmark-round btn-icon"></i> {!' '+$Label.c.Ven_lbl_Save}
                                    </button>

                                    <button type="button" class="btn btn-default" onclick="{!c.onCancel}" style="{!not(v.isRead) ? '' : 'display:none'}">
                                        <i class="ionicons ion-close-round btn-icon"></i> {!' '+$Label.c.Ven_lbl_Cancel}
                                    </button>
                                    ### Navbar - Old Style ### -->

                                    <!-- OLD Delete button not needed anymore
                                    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#deleteModal" style="{!and(v.accPlanId != null, v.isRead) ? '' : 'display:none'}">
                                    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#deleteModal" style="display:none">
                                        <i class="ionicons ion-trash-b btn-icon"></i> {!' '+$Label.c.Ven_lbl_Delete}
                                    </button>-->

                                    <!-- OLD Open modal with bootstrap
                                    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#kickoffModal" style="{!and(v.accPlanId != null, v.isRead) ? '' : 'display:none'}">
                                        <i class="ionicons ion-email btn-icon"></i> {!' '+$Label.c.Som_lbl_Kickoff}
                                    </button>

                                    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#reviewModal" style="{!and(v.accPlanId != null, v.isRead) ? '' : 'display:none'}">
                                        <i class="ionicons ion-email btn-icon"></i> {!' '+$Label.c.Som_lbl_Review}
                                    </button>-->

                                    <!-- ### Navbar - Old Style ###
                                    <button type="button" class="btn btn-default" style="{!and(v.accPlanId != null, v.isRead) ? '' : 'display:none'}" onclick="{!c.showKickoffModal}">
                                        <i class="ionicons ion-email btn-icon"></i> {!' '+$Label.c.Som_lbl_Kickoff}
                                    </button>

                                    <button type="button" class="btn btn-default" style="{!and(v.accPlanId != null, v.isRead) ? '' : 'display:none'}" onclick="{!c.showReviewModal}">
                                        <i class="ionicons ion-email btn-icon"></i> {!' '+$Label.c.Som_lbl_Review}
                                    </button>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
                ### Navbar - Old Style ### -->

                <!-- ### show all ### -->
                <div style="{!v.showAll ? '' : 'display:none'}">

                    <!-- ### Account Plan Informations - New Style###-->
                    <div class="row">
                        <div class="space-top sectionHeader">
                            {!$Label.c.Som_lbl_AccountPlanInfos}
                            <button type="button" class="btn btn-link pull-right magTop10" onclick="{!c.showDetailSection}">
                                <i class="ionicons ion-chevron-down btn-icon redColor"></i>
                            </button>
                        </div>

                        <div aura:id="detailSection">

                            <div class="col-md-6 space-top detailText">

                                <div class="col-md-6 goRight">
                                    {!$Label.c.Som_lbl_Year}:
                                </div>
                                <div class="col-md-6 goRight">
                                    <ui:outputText value="{!v.data.accPlan.accPlan.Som_Year__c}" />
                                </div>

                                <div class="col-md-6 goRight">
                                    Cash-In {!v.data.accPlan.accPlan.Som_Year__c - 1}:
                                </div>
                                <div class="col-md-6 goRight">
                                    <ui:outputNumber value="{!v.summaries[0]}" />
                                </div>

                                <div class="col-md-6 goRight">
                                    Target Cash-In {!v.data.accPlan.accPlan.Som_Year__c}:
                                </div>
                                <div class="col-md-6 goRight">
                                    <ui:outputNumber value="{!v.summaries[1]}" />
                                </div>

                                <div class="col-md-12 space-top" />

                                <div class="col-md-12">

                                    <div class="col-md-2 goRight" style="padding-top:25px;" >
                                        {!$Label.c.Som_lbl_Kickoff}:
                                    </div>
                                    <div class="col-md-4 goRight">
                                        <ui:inputDate aura:id="kickoffDate" class="form-control datePick" value="{!v.data.accPlan.accPlan.Som_Kickoff__c}" displayDatePicker="true"/>
                                    </div>

                                    <div class="col-md-2 goRight" style="padding-top:25px;">
                                        {!$Label.c.Som_lbl_Review}:
                                    </div>
                                    <div class="col-md-4 goRight" >
                                        <ui:inputDate aura:id="kickoffDate" class="form-control datePick" value="{!v.data.accPlan.accPlan.Som_Review__c}" displayDatePicker="true"/>
                                    </div>

                                </div>

                            </div>

                            <div class="col-md-1" />

                            <div class="col-md-4 space-top borderInfo accDash" style="background-color:white;">
                                <c:P7S1_AccountDashboardMediaCmp aura:id="dashboard" height="325px" />
                            </div>

                            <div class="col-md-1" />

                            <div class="col-md-12 space-top doubleRedBottom" />

                        </div>
                    </div>

                    <!-- ### Account Plan Team Assignment - New Style###-->
                    <div class="row">
                        <div class="sectionHeader">
                            {!$Label.c.Som_lbl_AccPlanTeamAssigns}

                            <button type="button" class="btn btn-link pull-right magTop10" onclick="{!c.showTeamSection}">
                                <i class="ionicons ion-chevron-down btn-icon redColor"></i>
                            </button>

                        </div>

                        <div style="height:20px"/>

                        <div aura:id="teamSection">

                            <!-- ### Invited to Kickoff (Status Kickoff, Invited, Review) ###-->
                            <div style="padding: 5px 18px;">

                                <p class="secondHeader">Invited to Kickoff</p>

                                <aura:if isTrue="{! v.data.accPlan.accPlanDetails.length > 0}" >
                                    <c:Som_KamDetailSummary accPlanDetails="{!v.data.accPlan.accPlanDetails}" accPlanTeamMap="{!v.data.mapId2Team}"
                                        summaries="{!v.summaries}" aura:id="accPlanDetailSummary"/>
                                </aura:if>

                            </div>

                            <div class="col-md-12 space-top">
                                <ul class="nav navbar-nav navbar-right magTop20">
                                    <li class="whiteBack navButton">
                                        <a href="#" onclick="{!c.showReviewModal}" style="padding: 5px 10px 5px 10px;color:#848484">
                                            {!' '+$Label.c.Som_lbl_Review}
                                            <i class="ionicons ion-email btn-icon redColor" style="margin-left: 5px"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>

                            <!-- ### Not invited to Kickoff (Status Created) ###-->
                            <div style="padding: 5px 18px;">

                                <p class="secondHeader">Not invited to Kickoff</p>

                                <aura:if isTrue="{! v.data.accPlan.accPlanDetails.length > 0}" >
                                    <c:Som_KamDetailSummary accPlanDetails="{!v.data.accPlan.accPlanDetails}" accPlanTeamMap="{!v.data.mapId2Team}"
                                        summaries="{!v.summaries}" aura:id="accPlanDetailSummary" onlyCreated="true"/>
                                </aura:if>

                            </div>

                            <div class="col-md-12 space-top">
                                <ul class="nav navbar-nav navbar-right magTop20">
                                    <li class="whiteBack navButton">
                                        <a href="#" onclick="{!c.showKickoffModal}" style="padding: 5px 10px 5px 10px;color:#848484">
                                            {!' '+$Label.c.Som_lbl_Kickoff}
                                            <i class="ionicons ion-email btn-icon redColor" style="margin-left: 5px"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>

                            <!-- ### Not invited to Kickoff (Status Created) ###-->
                            <div style="padding: 5px 18px;">

                                <p class="secondHeader">New Account Plan Teams</p>

                                <aura:iteration items="{!v.data.accPlanTeams}" var="accPlanTeam">

                                    <div class="col-md-4" style="{! if(not(accPlanTeam.wasSelected), '', 'display:none')}" >
                                        <c:Som_KamTeamAssignmentCmp accPlanTeam="{!accPlanTeam}"/>
                                    </div>

                                </aura:iteration>

                            </div>

                            <div class="col-md-12 space-top doubleRedBottom" />

                        </div>

                    </div>

                    <!-- ### Account Plan Strategy Profile Summary - New Style###-->
                    <div class="row">

                        <div class="sectionHeader">
                            {!$Label.c.Som_lbl_StrategyProfileSummary}

                            <button type="button" class="btn btn-link pull-right magTop10" onclick="{!c.showStratProfileSection}">
                                <i class="ionicons ion-chevron-down btn-icon redColor"></i>
                            </button>

                            <ul class="nav navbar-nav navbar-right magTop20">
                                <li class="whiteBack navButton">
                                    <a href="#" onclick="{!c.onReviewStrategies}" style="padding: 5px 10px 5px 10px;color:#848484">
                                        {!$Label.c.Som_lbl_Review +' '} {!$Label.c.Som_lbl_StrategyProfiles}
                                        <i class="ionicons ion-edit btn-icon redColor" style="margin-left: 5px"></i>
                                    </a>
                                </li>
                            </ul>

                        </div>

